doctype html
html
	head
		title=title
		link(type='text/css', rel='stylesheet', href='/css/materialize.min.css', media='screen,projection')
		link(type='text/css', rel='stylesheet', href='/css/style.css', media='screen,projection')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	body
		.navbar-fixed
			nav.red.darken-4
				.container
					.nav-wrapper
						a.brand-logo(href='/')
							i.material-icons home
							| #{title}
						a.sidenav-trigger(href='#', data-target='mobile-nav')
							i.material-icons menu
						ul#nav-mobile.right.hide-on-med-and-down
							li
								a.dropdown-trigger(href='javascript:void(0);',  data-target='dropdown-menu')
									i.material-icons.left person
									| #{user.name} #{user.role.name}
						ul#dropdown-menu.dropdown-content
							li
								a(href='/profile', title="My profile").black-text My profile
									i.material-icons person
							li.divider
							li
								a(href='/logout', title="Log out").red-text Logout
									i.material-icons power_settings_new							
		ul#mobile-nav.sidenav
			li
			.user-view
				.background.red.darken-4
				a(href='#user')
					img.circle(src='/img/PenguinDab.png')
				a(href='https://github.com/Kuma-gg', target='_blank')
					span.white-text.name KumÎ»
				a(href='https://github.com/Kuma-gg/audit-software', target='_blank')
					span.white-text.email #{title}
			li
				.divider
			li
				a.subheader=version
		.container
			.row
				.s12
					block content
		script(src='./socket.io/socket.io.js')
		script(src='./js/materialize.min.js')
		script(src='./js/script.js')
		block scripts